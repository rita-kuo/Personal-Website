generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ActionType {
  IMAGE
  IOT
}

enum TripAccess {
  PRIVATE
  PUBLIC
}

model Game {
  id        Int      @id @default(autoincrement())
  name      String
  slug      String   @unique
  levels    Level[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Level {
  id         Int           @id @default(autoincrement())
  game       Game          @relation(fields: [gameId], references: [id], onDelete: Cascade)
  gameId     Int
  name       String
  slug       String
  // ordering of levels within a game
  order      Int?
  details    LevelDetail[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @default(now()) @updatedAt

  @@index([gameId])
  @@unique([gameId, slug])
}

model LevelDetail {
  id         Int        @id @default(autoincrement())
  level      Level      @relation(fields: [levelId], references: [id], onDelete: Cascade)
  levelId    Int
  name       String
  actionType ActionType @default(IMAGE)
  content    String
  meta       Json?
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now()) @updatedAt

  @@index([levelId])
}

model Config {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model ItineraryTrip {
  id        Int            @id @default(autoincrement())
  title     String
  slug      String         @unique
  access    TripAccess     @default(PRIVATE)
  days      ItineraryDay[]
  createdAt DateTime       @default(now())
  updatedAt DateTime       @default(now()) @updatedAt
}

model ItineraryDay {
  id        Int             @id @default(autoincrement())
  trip      ItineraryTrip   @relation(fields: [tripId], references: [id], onDelete: Cascade)
  tripId    Int
  date      DateTime
  items     ItineraryItem[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @default(now()) @updatedAt

  @@index([tripId])
  @@unique([tripId, date])
}

model ItineraryItem {
  id        Int          @id @default(autoincrement())
  day       ItineraryDay @relation(fields: [dayId], references: [id], onDelete: Cascade)
  dayId     Int
  title     String
  startTime DateTime
  endTime   DateTime?
  location  String?
  parking   String?
  contact   String?
  memo      String?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @default(now()) @updatedAt

  @@index([dayId])
}

model User {
  id            Int       @id @default(autoincrement())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt
}

model Account {
  id                 Int     @id @default(autoincrement())
  userId             Int
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  @db.Text
  access_token       String?  @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?  @db.Text
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

